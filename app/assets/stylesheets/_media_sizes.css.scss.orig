	/* Sidebar-left */

	#sidebar-left-lg{
		display: none;
	}

	#sidebar-left-md{
		display: inline-block;

		&:hover{		
			
			& li {

				.text{
			    display: inline-block;
			    opacity: 1;			
				}		

				.text:empty{
					display: none;
				}					

