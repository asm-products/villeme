<% if params[:controller] == 'events' and params[:action] == 'new' and @event %>
    <meta property="og:site_name" content="Villeme" />
    <meta property="og:title" content="<%= @event.try(:name) %>" />
    <meta property="og:description" content="<%= strip_tags @event.try(:description_with_limit) %>" />
    <meta property="og:image" content="<%= @event.try(:image).try(:url, :share).nil? ? @event.try(:image).try(:url, :medium) : @event.try(:image).try(:url, :share) %>">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="484">
    <meta property="og:image:height" content="252">
    <meta property="og:type" content="article" />
    <meta property="fb:app_id" content="568047899941238">
    <meta property="og:locale" content="pt_BR">
<% else %>
    <meta property="og:site_name" content="Villeme" />
    <meta property="og:url" content="http://www.villeme.com/" />
    <meta property="og:title" content="Eventos e atividades na sua cidade - Pegue um convite!" />
    <meta property="og:description" content="O jeito mais fácil de se divertir, de aprender e de cuidar da saúde perto de casa." />
    <meta property="og:image" content="http://i.imgur.com/6vVwYtC.png">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="484">
    <meta property="og:image:height" content="252">
    <meta property="og:type" content="website" />
    <meta property="fb:app_id" content="568047899941238">
    <meta property="og:locale" content="pt_BR">
<% end %>
