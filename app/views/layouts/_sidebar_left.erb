

<!-- SCREEN > 1200px -->

<div id="SidebarLeft" class="SidebarLeft">

  <section class="SidebarLeft-section">
    <ul>
      <li>
        <% if user_signed_in? %>
            <%= link_to my_agenda_events_path, data: { push: true } do %>
                Minha agenda<span id="agenda-count" class="badge"><%= current_user.agenda_items.upcoming.count if current_user.agenda_items.upcoming.count >= 1 %></span>
            <% end %>
        <% else %>
            <%= link_to '#', onclick: 'Villeme.Ux.loginModal("VocÃª precisa estar logado para ver sua agenda.")' do %>
                Minha agenda
            <% end %>
        <% end %>
      </li>
    </ul>
  </section>

  <section class="SidebarLeft-section">
    <ul class="SidebarLeft-nav">
      <% unless @events_today.empty? %>
          <li><a href="#" data-scroll="today">Acontecendo hoje</a></li>
      <% end %>
      <% unless @events_persona.empty? %>
          <li><a href="#" data-scroll="persona">Indicados p/ mim</a></li>
      <% end %>
      <% if @events_neighborhood %>
        <li><a href="#" data-scroll="neighborhood">No meu bairro</a></li>
      <% end %>

      <% unless @events_fun.empty? %>
        <li><a href="#" data-scroll="fun">Para se divertir</a></li>
      <% end %>
      <% unless @events_education.empty? %>
        <li><a href="#" data-scroll="learn">Aprender algo novo</a></li>
      <% end %>
      <% unless @events_health.empty? %>
        <li><a href="#" data-scroll="health">Cuidar da saude</a></li>
      <% end %>
      <% unless @events_trends.empty? %>
        <li><a href="#" data-scroll="trends">Em alta</a></li>
      <% end %>
    </ul>
  </section>
</div>







