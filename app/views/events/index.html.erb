
<div class="panel-heading">
  <h2>Eventos</h2>
</div>

<div class="panel-body">
  <table id="table" class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Periodo</th>
        <th>Status</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event %></td>
          <td><%= "#{event.date_start.strftime('%d/%m')} até #{event.date_finish.strftime('%d/%m/%Y')}" %></td>
          <td><%= event.moderate == 1 ? 'Aprovado' : 'Em moderação' %></td>          
          <td>
            <%= button_to 'Editar',
                        edit_event_path(event), method: :get, :class => 'btn btn-default btn-xs' %>

            <%= button_to 'Excluir',
                        event_path(event),
                        method: :delete,
                        data: { anchor: "tr"},
                        class: 'btn btn-xs btn-danger excluir',
                        remote: true %>

            <%= button_to 'Aprovar',
                        event_aprove_path(event.id),
                        method: :put,
                        remote: true,
                        class: 'btn btn-xs aprovar' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Criar evento',
              new_event_path,
              :class => 'btn btn-primary pull-right' %>


</div>