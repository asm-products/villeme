<%- model_class = Invite -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @invite.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @invite.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @invite.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @invite.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:persona) %>:</strong></dt>
  <dd><%= @invite.persona %></dd>
  <dt><strong><%= model_class.human_attribute_name(:persona_sugest) %>:</strong></dt>
  <dd><%= @invite.persona_sugest %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_sugest) %>:</strong></dt>
  <dd><%= @invite.city_sugest %></dd>
  <dt><strong><%= model_class.human_attribute_name(:key) %>:</strong></dt>
  <dd><%= @invite.key %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              invites_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invite_path(@invite), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invite_path(@invite),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
