<%= simple_form_for @invite, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :email %>
  <%= f.input :name %>
  <%= f.input :city %>
  <%= f.input :persona %>
  <%= f.input :persona_suggest %>
  <%= f.input :city_suggest %>
  <%= f.input :key %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invites_path, :class => 'btn btn-default' %>
<% end %>
