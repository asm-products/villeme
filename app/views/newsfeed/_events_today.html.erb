<section class="Section">

  <div class="Section-header">
    <h1 class="Section-title">Acontecendo hoje em <%= @city.name %></h1>
    <span class="Section-description"></span>
  </div>

  <div class="Grid Grid--withGutter">

    <%= render 'alert_none_events' %>

    <% if current_or_guest_user.guest? %>
        <%= render 'events_for_guest', events: @events %>
    <% else %>
        <%= render 'events', events: @events_today %>
    <% end %>

    <%= render 'alert_create_new_event', events: @events_today %>

  </div>
</section>