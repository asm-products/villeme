<section class="Section" data-anchor="persona">
  <div class="Section-header">
    <h1 class="Section-title">Eventos indicados para <%= current_or_guest_user.persona.try(:name) %></h1>
    <span class="Section-description"></span>
  </div>

  <div class="Grid Grid--withGutter">
    <%= render 'alert_none_events' %>

    <% if current_or_guest_user.guest? %>
        <%= render 'events_for_guest', events: @events %>
    <% else %>
        <%= render 'events', events: @events_persona %>
    <% end %>

    <%= render 'alert_create_new_event', events: @events_persona %>
  </div>
</section>
