<section class="Section" data-anchor="neighborhood">
  <div class="Section-header">
    <h1 class="Section-title">Eventos no meu bairro <%= current_or_guest_user.neighborhood.try(:name) %></h1>
    <span class="Section-description"></span>
  </div>

  <div class="Grid Grid--withGutter">
    <%= render 'alert_none_events' %>

    <% if current_or_guest_user.guest? %>
        <%= render 'events_for_guest', events: @events_neighborhood %>
    <% else %>
        <%= render 'event', events: @events_neighborhood %>
    <% end %>

    <%= render 'alert_create_new_event', events: @events_neighborhood %>
  </div>
</section>
