<h3>Eventos no meu bairro <%= current_or_guest_user.neighborhood.name %></h3>
<div class="Grid Grid--withGutter">
  <%= render 'alert_none_events' %>

  <% if current_or_guest_user.guest? %>
      <%= render 'events_for_guest', events: @events_neighborhood %>
  <% else %>
      <%= render 'events', events: @events_neighborhood %>
  <% end %>

  <%= render 'alert_create_new_event', events: @events_neighborhood %>
</div>