<h2>Registrar</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), defaults: {input_html: {class: "form-control"}, wrapper_html: {class: "form-group"}}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, required:true, autofocus: true %>
    <%= f.input :username, required:true %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.input :city_id, collection: City.all, label_method: :name, value_method: :id, label: "Cidade" , include_blank: false, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
