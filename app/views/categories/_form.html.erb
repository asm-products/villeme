<%= simple_form_for @category, defaults: {input_html: {class: "form-control"}, wrapper_html: {class: "form-group"}} do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :slug %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>
<% end %>
